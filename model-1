# WIP
function diskfun0 {
  UUID0=$(lsblk -o NAME,MOUNTPOINT | grep -v 'MOUNTPOINT' | awk '$2 == "" {print $1}')
  sudo mkfs.ext4 -FF -m 0 /dev/"$UUID0"
  UUID1=$(lsblk -f | grep "$UUID0" | awk '{print $4}')
  export UUID1
}

